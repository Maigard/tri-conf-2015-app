<header>
  <a class="move-back-button" {{action 'moveTimeRangeBack'}}><i class="fa fa-chevron-circle-left fa-2x"></i></a>
  <h2>{{moment day 'MMMM GGGG'}}</h2>
  <a class="move-forward-button" {{action 'moveTimeRangeForward'}}><i class="fa fa-chevron-circle-right fa-2x"></i></a>
</header>
<table>
  <thead>
    <tr>
      <th>S</th>
      <th>M</th>
      <th>T</th>
      <th>W</th>
      <th>T</th>
      <th>F</th>
      <th>S</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows as |row|}}
      <tr>
        {{#each row as |dayOfWeek|}}
          <td {{action 'selectDay' dayOfWeek bubbles=false}} class="{{if (is-today dayOfWeek) 'today' ''}} {{if (time-equal (start-of-day dayOfWeek) (start-of-day day)) 'selected' ''}} {{if dayOfWeek 'weekday' ''}}">{{yield dayOfWeek}}</td>
        {{/each}}
      </tr>
    {{/each}}
  </tbody>
</table>
