<form class="form-inline" {{action 'saveEvent' on='submit'}}>
  <div class="col-md-6">
    <div class="panel event {{event.track.style}}">
        <div class="panel-heading row">
          <h2 class="{{if session.user.isAdmin 'col-xs-8'}}  panel-title">{{bootstrap-input value=event.title isEditing=event.isEditing}}</h2>
          {{#if session.user.isAdmin}}
          <div class="col-xs-4 edit-panel">
            {{#if event.isEditing}}
              <button class="btn save-button" type='submit'><i class="fa fa-floppy-o"></i></button>
              <button class="btn" {{action 'cancelChange'}}><i class="fa fa-undo"></i></button>
            {{else}}
              <button class="btn" {{action 'removeEvent'}}><i class="fa fa-remove"></i></button>
              <button class="btn" {{action 'editEvent'}}><i class="fa fa-pencil"></i></button>
            {{/if}}
          </div>
          {{/if}}
        </div>
        <div class="media">
          <div class="media-body">
            <div class="row">
              <div class="col-xs-9">
                <div class="form-group">
                  <p class="dayTime"><label>Time/Day:</label>
                  {{bootstrap-select-time
                    date=displayDate
                    isEditing=event.isEditing}}
                    </p>
                  <p>{{bootstrap-input label="Speaker:" value=event.speaker isEditing=event.isEditing}}</p>
                  <p>{{bootstrap-select
                      label="Track:"
                      selection=event.track
                      content=tracks
                      optionValuePath="content.id"
                      optionLabelPath="content.name"
                      value=event.track.name
                      isEditing=event.isEditing
                      placeholder="Event Track"
                      }}</p>
                  <p>{{bootstrap-select
                      label="Location:"
                      selection=event.location
                      content=locations
                      optionValuePath="content.id"
                      optionLabelPath="content.name"
                      value=event.location.name
                      isEditing=event.isEditing
                      placeholder="Location"}}</p>
                </div>
              </div>
              {{#if session.isAuthenticated}}
              <div class="col-xs-3 check-in">
                <div class="well check-in-well" {{action 'checkIn' event}}>
                <i class="fa fa-{{if attended 'check-square' 'square'}}-o"></i>
                <p>Saw&nbsp;it!</p>
                </div>
              </div>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
</form>
