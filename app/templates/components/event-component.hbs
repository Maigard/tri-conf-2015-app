<form class="form-inline" {{action 'saveEvent' on='submit'}}>
  <div class="col-md-6">
    <div class="panel event {{event.track.style}}">
      <div class="panel-heading">
        <div class="row">
          <h2 class="panel-title col-xs-6">{{bootstrap-input value=event.title isEditing=event.isEditing}}</h2>
          {{#if session.user.isAdmin}}
          <div class="col-xs-6 edit-panel">
            {{#if event.isEditing}}
              <button class="btn btn-primary" type='submit'><i class="fa fa-floppy-o"></i></button>
            {{else}}
              <button class="btn btn-primary" {{action 'removeEvent'}}><i class="fa fa-remove"></i></button>
              <button class="btn btn-primary" {{action 'editEvent'}}><i class="fa fa-pencil"></i></button>
            {{/if}}
          </div>
          {{/if}}
        </div>
      </div>
      <div class="media">
        <div class="media-body">
          <div class="row">
            <div class="col-xs-9"><p>{{bootstrap-input label="Speaker:" value=event.speaker isEditing=event.isEditing}}</p>
              <p>{{bootstrap-select
                    label="Track:"
                    selection=event.track
                    content=tracks
                    optionValuePath="content.id"
                    optionLabelPath="content.name"
                    value=event.track.name
                    isEditing=event.isEditing}}</p>
              <p>{{bootstrap-select
                    label="Location:"
                    selection=event.location
                    content=locations
                    optionValuePath="content.id"
                    optionLabelPath="content.name"
                    value=event.location.name
                    isEditing=event.isEditing}}</p></div>
            <div class="col-xs-3 event-time"><p>{{bootstrap-input value=event.time isEditing=event.isEditing}}</p><p>{{bootstrap-input value=event.day isEditing=event.isEditing}}</p></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>