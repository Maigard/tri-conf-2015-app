<form class="form-inline" {{action 'save' on='submit'}}>
  <div class="col-md-6">
    <div class="panel editable-panel {{panelClass}}">
      <div class="panel-heading row">
        <h2 class="panel-title col-sm-10">{{bootstrap-input value=title isEditing=isEditing placeholder="Title"}}</h2>
        {{#if session.user.isAdmin}}
        <div class="col-sm-2 edit-panel">
          {{#if isEditing}}
            <button class="btn save-button" type='submit'><i class="fa fa-floppy-o"></i></button>
            <button class="btn" {{action 'cancel'}}><i class="fa fa-undo"></i></button>
          {{else}}
            <button class="btn" {{action 'remove'}}><i class="fa fa-remove"></i></button>
            <button class="btn" {{action 'edit'}}><i class="fa fa-pencil"></i></button>
          {{/if}}
        </div>
        {{else}}
        <div class="col-xs-1 edit-panel">
          <button class="btn"><i class="fa fa-bookmark-o"></i></button>
        </div>
        {{/if}}
      </div>
      {{yield isEditing}}
    </div>
  </div>
</form>
