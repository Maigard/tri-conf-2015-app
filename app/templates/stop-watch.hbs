<div id="stop-watch">
  <div class="timer-wrapper">
    {{pad-number hours 2}}:{{pad-number minutes 2}}:{{pad-number seconds 2}}:{{pad-number milliseconds 3}}
  </div>
  <div class="button-wrapper">
    <button class="btn btn-primary" disabled={{startDisabled}} {{action 'start'}}>Start</button>
    <button class="btn btn-primary" disabled={{stopDisabled}} {{action 'stop'}}>Stop</button>
    <button class="btn btn-danger" {{action 'reset'}}>Reset</button>
  </div>
</div>
