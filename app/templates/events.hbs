<div class="panel container-fluid filter">
  <div class="row">
    <div class="col-lg-4 col-med-4 col-sm-4">
      <form role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
      </form>
    </div>
    <div class="col-lg-8 col-med-8 col-sm-8">
      <ul class="nav nav-tabs nav-pills">
        <li class="pill-triconf {{if isAllEventsHidden 'disabled'}}"><a href="#" {{action 'filter' 'AllEvents'}}>All</a></li>
        <li class="pill-music {{if isCultureEventsHidden 'disabled'}}"><a href="#" {{action 'filter' 'CultureEvents'}}>Culture/Arts/Music</a></li>
        <li class="pill-activism {{if isCommunityEventsHidden 'disabled'}}"><a href="#" {{action 'filter' 'CommunityEvents'}}>Community/Issues/Sustainability</a></li>
        <li class="pill-tech {{if isTechnologyEventsHidden 'disabled'}}"><a href="#" {{action 'filter' 'TechEvents'}}>Tech</a></li>
        <li class="pill-art-and-design {{if isDesignEventsHidden 'disabled'}}"><a href="#" {{action 'filter' 'DesignEvents'}}>Design/Communication</a></li>
        <li class="pill-entrepreneurship {{if isEntrepreneurshipEventsHidden 'disabled'}}" {{action 'filter' 'EntrepreneurshipEvents'}}><a href="#">Entrepreneurship</a></li>
      </ul>
    </div>
  </div>
</div>
<div class="row">
  {{#if session.user.isAdmin}}
    <button class="add-panel" {{action 'createEvent'}}><i class="fa fa-plus icon"> Add New Event</i></button>
  {{/if}}
</div>
{{#each sortedEvents as |event|}}
  {{#unless event.isHidden}}
    {{#editable-panel
      item=event
      onRemove="removeEvent"
      onSave="saveEvent"
      onCancel="cancelChange"
      panelClass=event.track.style
      title=event.title as |isEditing|}}
      <div class="media">
        <div class="media-body">
          <div class="row">
            <div class="col-xs-{{if isEditing '12' '8'}}">
              <div class="form-group">
                <p class="dayTime"><label>Time/Day:</label>
                {{bootstrap-select-time
                  date=event.displayDate
                  isEditing=isEditing}}
                </p>
                {{#if (hidden-field-check event.speaker session.user.isAdmin isEditing)}}
                <p>{{bootstrap-input label="Speaker:" value=event.speaker isEditing=isEditing}}</p>
                {{/if}}
                <p>{{bootstrap-select
                    label="Track:"
                    selection=event.track
                    content=model.tracks
                    optionValuePath="content.id"
                    optionLabelPath="content.name"
                    value=event.track.name
                    isEditing=isEditing
                    placeholder="Event Track"
                    }}</p>
                <p>{{bootstrap-select
                    label="Location:"
                    selection=event.location
                    content=model.locations
                    optionValuePath="content.id"
                    optionLabelPath="content.name"
                    value=event.location.name
                    isEditing=isEditing
                    placeholder="Location"}}</p>
              </div>
            </div>
            {{#unless isEditing}}
              {{#complete-check checkIn="checkIn" activity=event activityList=session.user.attendedEvents}}
                <p>Saw&nbsp;it!</p>
              {{/complete-check}}
            {{/unless}}
          </div>
        </div>
      </div>
  {{/editable-panel}}
  {{/unless}}
{{/each}}
