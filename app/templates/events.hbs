<div class="panel container-fluid filter">
  <div class="row">
    <div class="col-lg-4 col-med-4 col-sm-4">
      <form role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
      </form>
    </div>
    <div class="col-lg-8 col-med-8 col-sm-8">
      <ul class="nav nav-tabs nav-pills">
        <li class="pill-triconf"><a href="#">All</a></li>
        <li class="pill-tech"><a href="#">Tech</a></li>
        <li class="pill-entrepreneurship"><a href="#">Entrepreneurship</a></li>
        <li class="pill-art-and-design"><a href="#">Art/Design</a></li>
        <li class="pill-music"><a href="#">Music</a></li>
        <li class="pill-culture"><a href="#">Culture</a></li>
        <li class="pill-food"><a href="#">Food</a></li>
        <li class="pill-activism"><a href="#">Activism</a></li>
      </ul>
    </div>
  </div>
</div>
{{#each event in model}}
  {{#link-to 'check-in'}}
    <div class="col-md-6">
      <div {{bind-attr class=':panel event.track.style'}}>
        <div class="panel-heading">
          <h2 class="panel-title">{{event.title}}</h2>
        </div>
        <div class="media">
          <div class="media-body">
            <div class="row">
              <div class="col-xs-9"><p><label>Speaker:</label> {{event.speaker}}</p>
                <p><label>Track:</label> {{event.track.name}}</p>
                <p><label>Location:</label> {{event.location.name}}</p></div>
              <div class="col-xs-3 event-time"><p>{{event.time}}</p><p>{{event.day}}</p></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/link-to}}
{{/each}}